footer.footer
	if !miniFooter
		.footer__top
			.container-xl
				.row
					each col in menu
						nav.footer-menu.col-12.col-md-6.col-lg-3
							h4.footer-menu__title #{col.title}
							ul.footer-menu__list
								each item in col.items
									li.footer-menu__item
										a.footer-menu__link(href=item.url) #{item.title} 
	.footer__bottom
		.container-xl
			.row
				.col-12.col-lg-3
					.footer__copy
						+icon('fas fa-copyright')
						span MultiPassword 
						| 2021
				.col-12.col-lg-6
					.footer__policies
						each policy in policies
							a.footer__policies-item(href=policy.url) #{policy.title} 
				.col-12.col-lg-3
					.footer__lang
						include lang-dropdown