section.download-section
	.container-xl
		each category in list
			.row.align-items-xl-center
				.col-12.col-xl-6
					h2.download-section__title #{category.title}
					p.download-section__description #{category.descr}
				.col-12.col-sm-8.col-lg-7.col-xl-6
					.row
						each button in category.buttons
							.col-12.col-sm-6
								if button.dropdown

								else
									a.download-section__btn.iconed-btn(href="#" class=(button.disabled ? 'is-disabled' : ''))
										if category.coloredIcons
											span.iconed-btn__icon Icon
										else
											+icon(button.icon + ' iconed-btn__icon')
										span.iconed-btn__text #{button.title}
